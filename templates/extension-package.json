{
  "name": "<%= params.extensionName %>-extension",
  "keywords": [
    "theia-extension"
  ],
  "version": "<%= params.version %>",<% 
  if (params.description) { %>
  "description": "<%= params.description %>",
  <%} %><% 
  if (params.author) { %>
  "author": "<%= params.author %>",
  <% } %><% 
  if (params.license) { %>
  "license": "<%= params.license %>",
  <% } %><% 
  if (params.githubURL) { %>
  "repository": {
    "type": "git",
    "url": "<%= params.githubURL %>.git"
  },
  "bugs": {
    "url": "<%= params.githubURL %>/issues"
  },
  "homepage": "<%= params.githubURL %>",<% } %>
  "files": [
    "lib",
    "src"
  ],
  "dependencies": {
    "@theia/core": "<%= params.theiaVersion %>"
  },
  "devDependencies": {
    "rimraf": "latest",
    "typescript": "latest"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build",<% 
    if (params.languageContribution) { %>
    "copy-ls": "rm -rf ./build && mkdir build && cp ../XTEXT-PROJECT/dsl-ls.jar ./build/dsl-ls.jar",<%} %>
    "clean": "rimraf lib",
    "build": "tsc",
    "watch": "tsc -w"
  },
  "theiaExtensions": [
    {
      <% if (params.languageContribution) { %>
      "backend": "lib/node/<%= params.extensionName %>-backend-module",<% } %>
      "frontend": "lib/browser/<%= params.extensionName %>-frontend-module"
    }
  ]
}